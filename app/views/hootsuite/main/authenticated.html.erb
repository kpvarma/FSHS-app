<script>
  
  var apiToken = getParamFromUrl("api_token");
	window.close();
  
  function getParamFromUrl(name)
  {
      var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
      for(var i = 0; i < hashes.length; i++)
      {
          hash = hashes[i].split('=');
          if(hash[0] == name)
            return hash[1];
      }
      return null;
  }
  
</script>